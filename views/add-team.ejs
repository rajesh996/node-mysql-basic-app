<% include partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <br>
            <p class="text-center text-danger" style="text-decoration: underline"><%= message %></p><br><br>
        <% } %>
        <form class="add-team-form" action="" method="post" enctype="multipart/form-data">
            <label>Basic Details</label>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" name="team_name" id="team-name" placeholder="Team Name" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" name="country" id="country" placeholder="Country" required>
                </div>
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" name="coach" id="coach" placeholder="coach" required>
                </div>
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Add Team</button>
            <a href="/" type="button" class="btn btn-warning">Cancel</a>
        </form>
    </div>
</div>
</body>
</html>
